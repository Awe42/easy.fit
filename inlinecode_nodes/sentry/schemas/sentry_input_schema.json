{
  "schema_name": "sentry_agent_input_payload",
  "description": "Aggregated categorical state of the user for The Sentry agent to assess wellness risks.",
  "definitions": {
    "user_profile": {
      "description": "Static or slow-moving user attributes from internal DB.",
      "fields": {
        "life_stage": [
          "STUDENT",
          "PROFESSIONAL",
          "RETIRED",
          "EXPAT"
        ],
        "mobility_profile": [
          "UNRESTRICTED",
          "MODERATE",
          "LIMITED_MOBILITY"
        ],
        "social_battery_preference": [
          "MORNING_PERSON",
          "NIGHT_OWL",
          "ALWAYS_ON"
        ],
        "communication_style": [
          "CASUAL_BUDDY",
          "FORMAL_EMPATHETIC",
          "STRICT_COACH"
        ],
        "intervention_level": [
          "PASSIVE",
          "SUGGESTIVE",
          "ASSERTIVE"
        ]
      }
    },
    "physiological_state": {
      "description": "Normalized bio-data from wearables (Terra API).",
      "fields": {
        "stress_level": [
          "RESTING",
          "NORMAL",
          "ELEVATED",
          "CRITICAL_HIGH"
        ],
        "heart_rate_context": [
          "RESTING",
          "NORMAL",
          "ELEVATED_ACTIVE",
          "ELEVATED_SEDENTARY"
        ],
        "exertion_status": [
          "SEDENTARY",
          "OPTIMAL",
          "OVER_EXERTION_RISK"
        ],
        "sleep_debt": [
          "WELL_RESTED",
          "MILD_DEBT",
          "SEVERE_DEBT"
        ],
        "hydration_status": [
          "HYDRATED",
          "DEHYDRATED"
        ]
      }
    },
    "digital_hygiene": {
      "description": "Mental state inferred from device usage (RescueTime).",
      "fields": {
        "digital_state": [
          "DISCONNECTED",
          "FLOW_STATE",
          "FRAGMENTED",
          "DOOMSCROLLING"
        ],
        "productivity_pulse": [
          "PRODUCTIVE",
          "NEUTRAL",
          "DISTRACTED"
        ],
        "dominant_app_category": [
          "SOCIAL_MEDIA",
          "NEWS",
          "WORK",
          "ENTERTAINMENT",
          "UTILITY"
        ]
      }
    },
    "spatial_context": {
      "description": "Environmental context from location services (Google Maps).",
      "fields": {
        "location_category": [
          "HOME",
          "WORK_UNIVERSITY",
          "THIRD_PLACE",
          "NATURE",
          "TRANSIT"
        ],
        "mobility_mode": [
          "STATIONARY",
          "WALKING",
          "DRIVING",
          "CYCLING"
        ],
        "social_environment_inferred": [
          "SOLITARY",
          "CROWDED_PUBLIC",
          "PRIVATE_GROUP"
        ]
      }
    },
    "schedule_context": {
      "description": "Time availability and pressure from Calendar (Google Calendar).",
      "fields": {
        "current_availability": [
          "FREE",
          "BUSY",
          "TRANSITION_BUFFER"
        ],
        "upcoming_event_type": [
          "NONE",
          "SOCIAL",
          "WORK_ACADEMIC",
          "MEDICAL",
          "LOGISTICAL"
        ],
        "schedule_density": [
          "OPEN_DAY",
          "BALANCED",
          "PACKED_DAY"
        ]
      }
    }
  }
}